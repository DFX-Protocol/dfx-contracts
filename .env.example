## General
# This values are used when running a script and the setting is not overritten by commandline parameters.
HARDHAT_SHOW_STACK_TRACES=false # Enables JavaScript stack traces of expected errors.
HARDHAT_VERBOSE=false # Enables Hardhat verbose logging.
HARDHAT_NETWORK="hardhat" # Sets the network to connect to.
HARDHAT_MAX_MEMORY=4096 # Sets the maximum amount of memory that Hardhat can use.
# This are general user defined values.
COINMARKETCAP_API_KEY="" # Only used to show Euro values on the gas report. This should work on every network. The only catch is that the used gas is threaded like ETH from ethereum mainnet. Therefore the calculated Euro values are only correct for the ethereum main net and do not reflect the price of side chains or alternative chains.
ETHERSCAN_API_KEY="" #  Only used for verifying the contracts on etherscan. This works only on chains where contract verification with etherscan is possible.
REPORT_GAS=false # Do create a gas report by default.
